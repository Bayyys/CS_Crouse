<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_switch_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Switch开关："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/sw_switch_status"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:checked="true"
            android:padding="5dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Switch按钮的状态是开"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ck_switch_info"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="Optimized Switch按钮:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/ck_switch_status"
            android:layout_width="91dp"
            android:layout_height="46dp"
            android:checked="true"
            android:background="@drawable/checkbox_switch_selector"
            android:button="@null" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_switch_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Optimized Switch按钮的状态是开"
        android:textColor="@color/black"
        android:textSize="20dp" />

</LinearLayout>